<h1>Orders</h1>
<h2>View, Delete, Create, and Update Orders</h2>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each orders.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the orderID, user(Name), orderDate, totalPrice, street, city, state, zipCode, and couponCode }}
        {{#each orders}}
        <tr>
            <td>{{this.orderID}}</td>
            <td>{{this.user}}</td>
            <td>{{this.orderDate}}</td>
            <td>{{this.totalPrice}}</td>
            <td>{{this.street}}</td>
            <td>{{this.city}}</td>
            <td>{{this.state}}</td>
            <td>{{this.zipCode}}</td>
            <td>{{this.couponCode}}</td>

            {{! DELETE form }}
            <form id='delete_orders_form'>
                <input type='hidden' name='delete_orders_id' value='{{this.orderID}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create an Order<br></h2>
<form class='cuForm' id='create_orders_userID'>
    <label for='create_orders_userID'>User: </label>
    <select name='create_orders_userID' id='create_orders_userID' required>
        <option value='' disabled selected>Select a User</option>
        {{#each orders}}
        <option value='{{this.user}}' required>
            {{this.user}}
        </option>
        {{/each}}
    </select>
    <br>

    <label for='create_orders_orderDate'>Order Date:</label>
    <input type='date' name='create_orders_orderDate' id='create_orders_orderDate' />
    <br>

    <label for='create_orders_price'>Total Price:</label>
    <input type='number' step ='0.01' name='create_orders_totalPrice' id='create_orders_totalPrice' min='0' />
    <br>

    <label for='create_orders_street'>Street:</label>
    <input type='text' name='create_orders_street' id='create_orders_street' maxlength="100" />
    <br>

    <label for='create_orders_city'>City:</label>
    <input type='text' name='create_orders_city' id='create_orders_city' maxlength="50" />
    <br>

    <label for='create_orders_state'>State:</label>
    <input type='text' name='create_orders_state' id='create_orders_state' maxlength="50" />
    <br>

    <label for='create_orders_zipCode'>Zip Code:</label>
    <input type='text' name='create_orders_zipCode' id='create_orders_zipCode' maxlength="10" />
    <br>

    <label for='create_orders_couponID'>Coupon:</label>
    <select name='create_orders_couponID' id='create_orders_couponID' required>
        <option value='' disabled selected>Select a Coupon</option>
        {{#each orders}}
        <option value='{{this.couponCode}}' required>
            {{this.couponCode}}
        </option>
        {{/each}}
    </select>
    <br>

    <input type='submit' />
</form>

