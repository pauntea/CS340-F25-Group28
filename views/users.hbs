<h1>Users</h1>
<h2>View Users' Information</h2>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each users.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the userID, userName, email, and phoneNumber }}
        {{#each users}}
        <tr>
            <td>{{this.userID}}</td>
            <td>{{this.userName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phoneNumber}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
