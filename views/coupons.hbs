<h1>Coupons</h1>
<h2>View Existing Coupons</h2>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>Coupon ID</th>
            <th>Coupon Code</th>
            <th>Discount Type</th>
            <th>Discount</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the couponID, couponCode, discountType, discount }}
        {{#each coupons}}
        <tr>
            <td>{{this.couponID}}</td>
            <td>{{this.couponCode}}</td>
            <td>{{this.discountType}}</td>
            <td>{{this.discount}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
